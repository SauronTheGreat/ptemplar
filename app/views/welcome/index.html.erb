<%= content_for :head do %>

    <script type="text/javascript">
        $(function () {
        });
    </script>

    <style>
        h2 {
            font-size: 18px;
            color: white;
            line-height: 20px;
            text-shadow: 4px 0 8px #600, -4px 0 8px #006;
        }

    </style>

<% end %>

<div style="margin-left: 50px">
  <br/>

  <div class="row">
    <div class="span3" style="margin-top:15px;">
      <%= image_tag "ptemplar.png", :style => "", :size => "300x300" %>
    </div>
    <div class="span9" style="border-radius:10px;height:250px;">
      <table style="height:200px;margin-left: 0px;margin-top: 10px;;border-radius: 10px" class="span12">
        <tr>
          <td style="text-align: center;width:33%;">
            <%= image_tag "ring.png", :size => "250x250" %>
            <h2 style="position:absolute;margin-top:-175px;margin-left: 80px">Template <br/> based fast<br/> designing
            </h2>
          </td>
          <td style="text-align: center;width:33%;">
            <%= image_tag "ring.png", :size => "250x250" %>
            <h2 style="position:absolute;margin-top:-175px;margin-left: 80px">Save slides <br/> to Slide <br/> bank</h2>
          </td>
          <td style="text-align: center;width:33%;">
            <%= image_tag "ring.png", :size => "250x250" %>
            <h2 style="position:absolute;margin-top:-175px;margin-left: 70px">SCORM <br/> compliant <br/> presentations
            </h2>
          </td>
        </tr>
      </table>

    </div>
  </div>

  <div class="row-fluid" style="">
    <div class="span10">
      <div class="hero-unit">
        <h1 style="text-align: left;color:#6a696b;">The Easy Online <br/>Slide Creator</h1>

        <p>
          Because it shouldn't have to be that tough!!!
        </p>
        <br/>

        <% if !current_user %>
            <a href="#sign_up_form" data-toggle="modal" data-backdrop="static" class="btn btn-info btn-large">
              Sign Up...
            </a>

        <% else %>
            <a href="<%= homepage_path %>" class="btn btn-inverse"><p>Create Slides at rajni's speed !!<br>Go to slide manager</p></a>
            <a href="<%= new_ptemplate_path %>" class="btn btn-success"><p>Know the designer within you !!<br>Try a new Ptemplate</p></a>
            <a href="<%= ptemplates_path %>" class="btn btn-warning"><p>Look through your creations  !!<br>Go to Ptemplate manager</p></a>


        <% end %>
        <%#= image_tag "projector.png", :style=>"position:absolute;margin-top:-200px;margin-left:400px;width:256px;" %>
      </div>
    </div>
  </div>

  <div id="sign_up_form" class="modal hide fade">
    <div class="modal-header">
      <a class="close" data-dismiss="modal"> &times; </a>

      <h2>Sign Up</h2>
    </div>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <div class="modal-body">
          <div class="clearfix">
            <%= f.label :email %>
            <div class="input">  <%= f.email_field :email %></div>
            <%= f.label :password %>
            <div class="input">  <%= f.password_field :password %></div>
            <%= f.label :re_enter %>
            <div class="input">  <%= f.password_field :password_confirmation %></div>
          </div>
        </div>
        <div class="modal-footer">
          <div>
            <%= f.submit "Sign up", :class => "btn btn-warning btn-large" %>
          </div>
        </div>
    <% end %>
  </div>

</div>




