    Save
    <br/>
    <br/>

  </a>
  <br>
  <br>
  <% if @pslide.in_bank? %>
      <% @class="btn btn-danger design_buttons" %>
      <% @text="Remove From Bank" %>
      <% @reference="id=add_to_slide_bank   href=#" %>

  <% else %>
      <% @class="btn btn-inverse design_buttons" %>
      <% @text="Save In Bank" %>
      <% @reference='href=#add_slide_to_bank ' %>
  <% end %>
